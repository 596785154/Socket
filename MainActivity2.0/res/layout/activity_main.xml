<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#282828" >

    <TextView
        android:id="@+id/textView_name_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="120dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/button_control"
        android:layout_width="230sp"
        android:layout_height="60sp"
        android:layout_alignBottom="@+id/textView_name_choose"
        android:layout_toRightOf="@+id/textView_name_choose"
        android:background="@drawable/button_selector"
        android:minHeight="36dip"
        android:text="控制"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="64dp"
        android:layout_marginTop="106dp"
        android:layout_toLeftOf="@+id/textView_name_choose"
        android:background="@drawable/anduinoroubd" />

</RelativeLayout>